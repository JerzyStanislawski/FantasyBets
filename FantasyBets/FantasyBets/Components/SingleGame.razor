@using FantasyBets.Data

<div class="data-row">
        <div class="data-time @(DisplayDate ? "date-width" : "time-width")">@(DisplayDate ? Game.Time.ToString("dd MMMM, HH:mm") : Game.Time.ToShortTimeString())</div>
        <div class="data-home-team">
            <span>@Game.HomeTeam.Name</span>
            <img srcset="@Game.HomeTeam.LogoUrl" width="40" height="40">
        </div>
    <div class="data-center">vs</div>
        <div class="data-away-team">
            <img srcset="@Game.AwayTeam.LogoUrl" width="40" height="40">
            <span>@Game.AwayTeam.Name</span>
        </div>
</div>

@code {
    [Parameter]
    public Game Game { get; set; } = null!;
    [Parameter]
    public bool DisplayDate { get; set; }
}
